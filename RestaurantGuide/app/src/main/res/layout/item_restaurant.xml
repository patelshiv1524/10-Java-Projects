<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- Restaurant Name -->
    <TextView
        android:id="@+id/text_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Restaurant Name"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="8dp" />

    <!-- Restaurant Address -->
    <TextView
        android:id="@+id/text_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Restaurant Address"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginBottom="4dp" />

    <!-- Restaurant Tags -->
    <TextView
        android:id="@+id/text_tags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tags: Vegan, Italian"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="12dp" />

    <!-- Rating Section -->
    <RelativeLayout
        android:layout_width="394dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <!-- RatingBar -->
        <RatingBar
            android:id="@+id/rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="8dp"
            android:isIndicator="true"
            android:numStars="5"
            android:stepSize="0.5" />

        <!-- Numeric Rating -->

        <!-- Edit Button -->

        <TextView
            android:id="@+id/text_numeric_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/rating_bar"
            android:layout_marginStart="2dp"
            android:layout_marginBottom="19dp"
            android:layout_toEndOf="@id/rating_bar"
            android:text="4.5/5"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"
            android:textStyle="bold" />

        <!-- Delete Button -->

        <ImageButton
            android:id="@+id/btn_edit"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="37dp"
            android:background="@android:color/transparent"
            android:contentDescription="Edit Restaurant"
            android:src="@drawable/ic_edit" />

        <ImageButton
            android:id="@+id/btn_delete"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="-8dp"
            android:layout_toStartOf="@id/btn_edit"
            android:background="@android:color/transparent"
            android:contentDescription="Delete Restaurant"
            android:src="@drawable/ic_delete" />
    </RelativeLayout>
</LinearLayout>
